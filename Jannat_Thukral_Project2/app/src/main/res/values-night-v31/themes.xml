<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cosmetica" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cos_pink</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cos_pink</item>
        <item name="android:windowSplashScreenBackground">@color/cos_pink</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/cosmetica_logo_white</item>
        <item name="android:fontFamily">@font/cos_font</item>
    </style>
</resources>