<RelativeLayout android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:maxWidth="150dp"
    android:maxHeight="200dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/product_item"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/list_product_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/model1" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/list_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_product_image"
        android:text="@string/app_name"
        android:singleLine="true"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/list_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_product_title"
        android:text="$ 99"
        android:textColor="@color/black"
        android:gravity="center"
        />
</RelativeLayout>