<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <TextView
            android:drawableEnd="@drawable/ic_baseline_receipt_24"
            android:id="@+id/payment_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="ghjGHJ_fgh45t6yvb"
            android:textColor="@color/white"
            android:background="@color/cos_pink_tint"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/payment_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_baseline_shopping_bag_24"
            android:background="@color/white"
            android:textStyle="bold"
            android:text="Cosmetica"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/payment_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/baseline_payments_24"
            android:textStyle="bold"
            android:background="@color/white"
            android:text="9999"
            android:gravity="center_vertical"
            android:singleLine="true"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>